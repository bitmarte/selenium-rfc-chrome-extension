{
    "name": "%ext_name%",
    "description": "%ext_description%",
    "default_locale": "en",
    "version": "%ext_version%",
    "background": {
        "scripts": [
            "js/ctx-menu-min.js",
            "js/background-min.js",
            "js/startup-min.js"
        ]
    },
    "content_scripts": [{
        "persistent": false,
        "matches": ["<all_urls>"],
        "js": ["js/content-min.js"],
        "all_frames": true
    }],
    "browser_action": {
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "64": "images/icon.png",
        "128": "images/icon.png"
    },
    "permissions": ["activeTab", "gcm", "notifications", "contextMenus", "history", "downloads"],
    "manifest_version": 2
}